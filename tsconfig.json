{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "watch": false,
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@interfaces": ["./src/interfaces"]
    },
    "incremental": true,
    "noEmit": false
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
